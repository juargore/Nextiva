<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/connectPrimaryBlue_28" />
            <stroke android:width="1dp" android:color="@color/connectPrimaryBlue" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/connectWhite" />
            <stroke android:width="1dp" android:color="@color/connectWhite" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/connectPrimaryBlue" />
            <stroke android:width="1dp" android:color="@color/connectPrimaryBlue_28" />
        </shape>
    </item>
</selector>