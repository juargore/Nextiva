<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextiva.nextivaapp.android.HealthCheckActivity">

    <Button
        android:id="@+id/health_check_run_check_button"
        style="@style/NextivaButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_vertical_margin_small"
        android:layout_marginTop="@dimen/general_view_medium"
        android:text="@string/health_check_run_check_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/health_check_fragment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/health_check_fragment"
        android:name="com.nextiva.nextivaapp.android.fragments.HealthCheckFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/general_vertical_margin_small"
        android:layout_marginEnd="@dimen/general_vertical_margin_small"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        tools:layout="@layout/fragment_health_check"
        app:layout_constraintTop_toBottomOf="@id/health_check_app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/health_check_run_check_button"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/health_check_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/health_check_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
            app:titleEnabled="false" />

    </com.google.android.material.appbar.AppBarLayout>
</androidx.constraintlayout.widget.ConstraintLayout>