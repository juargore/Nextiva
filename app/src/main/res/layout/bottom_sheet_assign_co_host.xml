<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/connectWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/connectGrey01"
        android:paddingTop="@dimen/general_padding_xsmall"
        android:src="@drawable/ic_bottom_sheet_pull_down" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/connectGrey01"
        android:padding="@dimen/general_padding_medium">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/bottom_sheet_assign_cohost_title"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/material_text_headline"
            android:textStyle="bold"
            app:fontFamily="@font/lato_heavy" />

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:id="@+id/ftv_assign_cohost_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/connectGrey09"
            android:textSize="@dimen/material_text_title"
            app:icon_string="@string/fa_times" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_assign_cohost_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_vertical_margin_xmedium"
        android:padding="@dimen/general_padding_xmedium"
        android:text="@string/bottom_sheet_assign_cohost_message"
        android:textColor="@color/connectGrey10" />

    <LinearLayout
        android:id="@+id/ll_assign_cohost_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_padding_xmedium"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/connectPrimaryLightRed"
        android:visibility="gone">

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_padding_xmedium"
            android:textColor="@color/connectSecondaryRed"
            android:textSize="@dimen/material_text_title"
            app:icon_string="@string/fa_info_circle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/general_padding_small"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingEnd="@dimen/general_padding_large"
            android:text="@string/bottom_sheet_assign_cohost_error_message"
            android:textColor="@color/connectSecondaryRed" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_assign_cohost_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/connectWhite"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/general_padding_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_assign"
        style="@style/NextivaButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_view_xlarge"
        android:layout_marginHorizontal="@dimen/general_padding_medium"
        android:layout_marginTop="@dimen/general_padding_medium"
        android:layout_marginBottom="@dimen/general_padding_medium"
        android:background="@drawable/rounded_primary_button"
        android:fontFamily="@font/lato_bold"
        android:text="@string/bottom_sheet_assign_cohost_button_assign"
        android:textAllCaps="false"
        android:textColor="@color/connectWhite" />

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_view_xlarge"
        android:layout_marginTop="@dimen/general_padding_medium"
        android:layout_marginBottom="@dimen/general_padding_medium"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/connectPrimaryBlue"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        style="@style/Button.Borderless.NextivaBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_view_xlarge"
        android:layout_marginHorizontal="@dimen/general_padding_medium"
        android:layout_marginBottom="@dimen/general_padding_large"
        android:contentDescription="@string/connect_meeting_cancel_content_description"
        android:fontFamily="@font/lato_bold"
        android:text="@string/general_cancel"
        android:textAllCaps="false"
        android:textColor="@color/connectPrimaryBlue" />

</LinearLayout>