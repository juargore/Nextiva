<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/general_padding_xsmall">

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/connectGrey01"
        android:paddingTop="@dimen/general_padding_xsmall"
        android:src="@drawable/ic_bottom_sheet_pull_down" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/connectGrey01"
        android:orientation="vertical"
        android:paddingEnd="@dimen/general_padding_xsmall"
        android:paddingStart="@dimen/general_padding_medium"
        android:paddingVertical="@dimen/general_padding_xsmall">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/connectGrey01"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/connect_main_bottom_navigation_bottom_sheet_title"
                android:textColor="@color/connectSecondaryDarkBlue"
                android:textSize="@dimen/material_text_headline"
                android:textStyle="bold"
                app:fontFamily="@font/lato_heavy" />

            <include
                android:id="@+id/cancel_icon_include"
                layout="@layout/view_toolbar_close_button" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:text="@string/connect_main_bottom_navigation_bottom_sheet_sub_title" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_main_bottom_navigation_bottom_sheet_customize_toolbar_button_text"
        android:background="@color/transparent"
        android:textColor="@color/connectPrimaryBlue"
        android:layout_marginEnd="@dimen/general_padding_medium"
        android:textAllCaps="false"
        android:layout_gravity="end"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_navigation_more_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/connectWhite"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/general_padding_medium"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.appcompat.widget.LinearLayoutCompat>