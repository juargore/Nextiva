<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bottom_sheet_background_tinted"
    android:paddingTop="@dimen/general_padding_xsmall">

    <ImageView
        android:id="@+id/bottom_sheet_contact_detail_pull_down_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_bottom_sheet_pull_down"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_sheet_contact_detail_spacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_vertical_margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_contact_detail_pull_down_icon"
        app:layout_constraintBottom_toTopOf="@id/active_call_toolbar"/>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/active_call_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_contact_detail_spacer"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_contact_detail_coordinator_layout"
        android:visibility="gone"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_sheet_contact_detail_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/connect_contact_details_submenu_layout"
        app:layout_constraintTop_toBottomOf="@id/active_call_toolbar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bottom_sheet_contact_detail_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_sheet_background_tinted"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/bottom_sheet_contact_details_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                app:titleEnabled="false">

                <com.nextiva.nextivaapp.android.view.ConnectContactHeaderView
                    android:id="@+id/bottom_sheet_contact_details_contact_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bottom_sheet_contact_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:contentInsetStart="@dimen/general_horizontal_margin_xsmall"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <include layout="@layout/view_toolbar_back_arrow"
                            android:id="@+id/back_arrow_include"
                            android:layout_width="@dimen/toolbar_button_size"
                            android:layout_height="@dimen/toolbar_button_size"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bottom_sheet_contact_details_toolbar_collapsed_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            android:textSize="@dimen/material_text_title"
                            android:textStyle="bold"
                            app:fontFamily="@font/lato_heavy"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/back_arrow_include"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bottom_sheet_contact_details_toolbar_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                            android:background="@drawable/rounded_corners"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            style="@style/DS_Caption1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/back_arrow_include"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
                            android:id="@+id/bottom_sheet_contact_details_toolbar_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                            android:textColor="@color/connectGrey09"
                            android:textSize="@dimen/font_awesome_menu_icon"
                            app:icon_string="@string/fa_lock"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bottom_sheet_contact_details_toolbar_title_text_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:solid_icon="true" />

                        <include layout="@layout/view_toolbar_close_button"
                            android:id="@+id/cancel_icon_include"
                            android:layout_width="@dimen/toolbar_button_size"
                            android:layout_height="@dimen/toolbar_button_size"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_contact_details_contact_method_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/general_padding_medium"
                android:paddingBottom="@dimen/general_padding_small"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_contact_details_call_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_call_quick_action_content_description"
                    android:visibility="gone"
                    app:icon_string="@string/fa_phone_alt"
                    app:solid_icon="true" />

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_contact_details_sms_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_sms_quick_action_content_description"
                    android:visibility="gone"
                    app:icon_string="@string/fa_comment_dots"
                    app:solid_icon="true" />

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_contact_details_video_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_video_quick_action_content_description"
                    android:visibility="gone"
                    app:icon_string="@string/fa_video"
                    app:solid_icon="true" />

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_contact_details_chat_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_chat_quick_action_content_description"
                    android:visibility="gone"
                    app:icon_string="@string/fa_comments_alt"
                    app:solid_icon="true" />
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/bottom_sheet_contact_detail_list_fragment_container_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/connectWhite"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/connect_contact_details_submenu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/general_padding_medium"
        android:background="@color/connectWhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/connect_contact_details_submenu"
            style="@style/CreateConnectContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_small"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:layout_marginBottom="@dimen/general_vertical_margin_small"
            android:text="@string/connect_call_details_add_to_contacts"
            android:backgroundTint="@color/connectPrimaryBlue"
            android:textColor="@color/connectWhite"
            android:visibility="gone" />

        <TextView
            android:id="@+id/connect_contact_details_blocking_button"
            style="@style/CreateConnectContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/general_vertical_margin_small"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_small"
            android:backgroundTint="@color/connectWhite"
            android:text="@string/connect_call_details_block_number"
            android:textColor="@color/connectSecondaryRed"
            android:visibility="gone" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
