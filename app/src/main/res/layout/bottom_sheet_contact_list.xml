<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bottom_sheet_contact_list_pull_down_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/connectGrey01"
        android:paddingTop="@dimen/general_padding_xsmall"
        android:src="@drawable/ic_bottom_sheet_pull_down" />

    <LinearLayout
        android:id="@+id/bottom_sheet_contact_list_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/connectGrey01"
        android:orientation="horizontal"
        android:padding="@dimen/general_padding_small">

        <include layout="@layout/view_toolbar_back_arrow"
            android:id="@+id/back_arrow_include" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include layout="@layout/view_toolbar_close_button"
            android:id="@+id/cancel_icon_include" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet_contact_list_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/connectGrey01"
        android:paddingBottom="@dimen/general_padding_medium">

        <com.nextiva.nextivaapp.android.view.ConnectSearchView
            android:id="@+id/bottom_sheet_contact_list_search_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_view_xxxlarge"
            android:background="@color/connectGrey01"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_view_local_title_layout"
            android:paddingHorizontal="@dimen/general_padding_medium" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_sheet_contact_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/connectWhite"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/general_padding_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>