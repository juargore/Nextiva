<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_sheet_delete_confirmation_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_sheet_delete_confirmation_pull_down_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/connectGrey01"
            android:paddingTop="@dimen/general_padding_xsmall"
            android:paddingBottom="@dimen/general_padding_medium"
            android:src="@drawable/ic_bottom_sheet_pull_down" />

        <LinearLayout
            android:id="@+id/bottom_sheet_delete_confirmation_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bottom_sheet_delete_confirmation_title"
                style="@style/DS_H5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                android:textAlignment="gravity"
                android:textColor="@color/connectSecondaryDarkBlue"
                tools:text="Delete message" />

            <include layout="@layout/view_toolbar_close_button"
                android:id="@+id/cancel_icon_include"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/connectWhite"
        android:background="@color/connectWhite" >

        <TextView
            android:id="@+id/bottom_sheet_delete_confirmation_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_text_title1"
            android:layout_marginTop="@dimen/general_vertical_margin_large"
            android:layout_marginBottom="@dimen/general_vertical_margin_large"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:textColor="@color/connectGrey10"
            tools:text="Are you sure you want to delete this message?" />

        <CheckBox
            android:id="@+id/bottom_sheet_checkbox"
            android:textSize="@dimen/material_text_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/checkBoxTextColorDelete"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/general_horizontal_margin_medium"
            android:layout_marginVertical="@dimen/general_horizontal_margin_medium"
            android:text="@string/share_contact_bottom_sheet_dont_show" />

        <TextView
            android:id="@+id/bottom_sheet_delete_confirmation_primary"
            style="@style/CreateConnectContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_medium"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/general_delete"
            android:backgroundTint="@color/connectPrimaryRed"
            android:textColor="@color/connectWhite"/>

        <TextView
            android:id="@+id/bottom_sheet_delete_confirmation_secondary"
            style="@style/CreateConnectContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_vertical_margin_medium"
            android:text="@string/general_cancel"
            android:backgroundTint="@color/connectWhite"
            android:textColor="@color/connectPrimaryBlue"/>

    </LinearLayout>

</LinearLayout>