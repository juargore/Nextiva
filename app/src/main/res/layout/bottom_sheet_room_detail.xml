<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bottom_sheet_background_tinted"
    android:paddingTop="@dimen/general_padding_xsmall">

    <ImageView
        android:id="@+id/bottom_sheet_contact_detail_pull_down_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_bottom_sheet_pull_down"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingTop="@dimen/general_vertical_margin_small"
        app:layout_constraintBottom_toTopOf="@id/connect_room_details_button_layout"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_contact_detail_pull_down_icon">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bottom_sheet_contact_detail_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_sheet_background_tinted"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/bottom_sheet_contact_details_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                app:titleEnabled="false">

                <com.nextiva.nextivaapp.android.features.rooms.view.RoomDetailHeaderView
                    android:id="@+id/bottom_sheet_room_detail_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bottom_sheet_room_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:contentInsetStartWithNavigation="@dimen/general_horizontal_margin_xsmall"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/room_type_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_darker"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/chats_room_title"
                            style="@style/DS_Caption1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bottom_sheet_room_details_toolbar_collapsed_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            android:textSize="@dimen/material_text_title"
                            android:textStyle="bold"
                            app:fontFamily="@font/lato_heavy"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/room_type_text_view"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bottom_sheet_room_details_toolbar_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
                            android:background="@drawable/rounded_corners"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            style="@style/DS_Caption1"
                            app:layout_constraintStart_toEndOf="@id/room_type_text_view"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
                            android:id="@+id/bottom_sheet_room_details_toolbar_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/connectGrey08"
                            android:textSize="@dimen/font_awesome_menu_icon"
                            app:icon_string="@string/fa_lock"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bottom_sheet_room_details_toolbar_title_text_view"
                            app:layout_constraintTop_toTopOf="parent"
                            app:solid_icon="true" />

                        <include layout="@layout/view_toolbar_close_button"
                            android:id="@+id/cancel_icon_include"
                            android:layout_width="@dimen/toolbar_button_size"
                            android:layout_height="@dimen/toolbar_button_size"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <LinearLayout
                android:id="@+id/bottom_sheet_room_details_contact_method_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/general_padding_medium"
                android:paddingBottom="@dimen/general_padding_small"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_room_details_chat_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_chat_quick_action_content_description"
                    app:icon_string="@string/fa_comments_alt"
                    app:solid_icon="true" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/bottom_sheet_room_detail_list_fragment_container_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/connectWhite"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/connect_contact_details_contact_method_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/general_view_xxxxxxxxxxxxxlarge"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/general_padding_large"
                    android:paddingBottom="@dimen/general_padding_large"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/favorite_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/mute_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/general_padding_xxxlarge"
                        android:paddingEnd="@dimen/general_padding_xxxlarge" />

                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/hide_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/connectWhite"
                android:padding="@dimen/general_padding_medium">

                <TextView
                    android:id="@+id/bottom_sheet_room_details_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_bottom_sheet_room_details_participants_in_room"
                    android:textColor="@color/connectGrey10" />

                <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
                    android:id="@+id/bottom_sheet_room_details_add_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/connectWhite">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bottom_sheet_room_details_recycler_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/connectWhite"
                    android:paddingBottom="@dimen/general_padding_medium"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    layout="@layout/room_details"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/connect_room_details_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/general_padding_medium"
        android:background="@color/connectWhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/created_by_label">

        <TextView
            android:id="@+id/connect_room_details_leave_button"
            style="@style/CreateConnectContactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_small"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:layout_marginBottom="@dimen/general_vertical_margin_small"
            android:backgroundTint="@color/connectPrimaryRed"
            android:textColor="@color/connectWhite"
            android:text="@string/connect_bottom_sheet_room_leave"
            android:visibility="visible" />

    </LinearLayout>

    <include layout="@layout/room_date_details" />

</androidx.constraintlayout.widget.ConstraintLayout>
