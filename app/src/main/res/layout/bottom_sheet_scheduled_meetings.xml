<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/general_padding_xsmall"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/general_padding_xsmall"
        android:src="@drawable/ic_bottom_sheet_pull_down"
        android:backgroundTint="@color/connectGrey01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/connectGrey01"
        android:paddingVertical="@dimen/general_padding_xsmall"
        android:paddingStart="@dimen/general_padding_medium"
        android:paddingEnd="@dimen/general_padding_xsmall">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/bottom_sheet_scheduled_meetings_title"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/material_text_headline"
            android:textStyle="bold"
            app:fontFamily="@font/lato_heavy" />

        <include layout="@layout/view_toolbar_close_button"
            android:id="@+id/cancel_icon_include"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_scheduled_meetings_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/connectWhite"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/general_padding_medium"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.nextiva.nextivaapp.android.view.ConnectEmptyStateView
        android:id="@+id/scheduled_meetings_empty_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/connectWhite"
        app:emptyStateButtonText=""
        app:emptyStateImage="@drawable/empty_state_meeting"
        app:emptyStateMessage="@string/scheduled_meetings_empty_state_view_message_text"
        app:emptyStateTitle="@string/scheduled_meetings_empty_state_view_title_text" />

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</LinearLayout>