<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bottom_sheet_background_tinted"
    android:paddingTop="@dimen/general_padding_xsmall">

    <ImageView
        android:id="@+id/bottom_sheet_sms_details_pull_down_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_bottom_sheet_pull_down"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingTop="@dimen/general_vertical_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_sms_details_pull_down_icon">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/bottom_sheet_sms_details_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_sheet_background_tinted"
            android:fitsSystemWindows="true"
            android:stateListAnimator="@null">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/bottom_sheet_sms_details_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|snap"
                app:titleEnabled="false">

                <com.nextiva.nextivaapp.android.view.ConnectContactHeaderView
                    android:id="@+id/bottom_sheet_sms_details_contact_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/general_padding_small"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bottom_sheet_sms_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:contentInsetStartWithNavigation="@dimen/general_horizontal_margin_xsmall"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bottom_sheet_sms_details_toolbar_collapsed_title_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/connectSecondaryDarkBlue"
                            android:textSize="@dimen/material_text_title"
                            android:textStyle="bold"
                            app:fontFamily="@font/lato_heavy"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/cancel_icon_include"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <include layout="@layout/view_toolbar_close_button"
                            android:id="@+id/cancel_icon_include"
                            android:layout_width="@dimen/toolbar_button_size"
                            android:layout_height="@dimen/toolbar_button_size"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/general_padding_medium"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

                <com.nextiva.nextivaapp.android.view.ConnectQuickActionDetailButton
                    android:id="@+id/bottom_sheet_sms_details_sms_text_view"
                    style="@style/ConnectContactDetailQuickActionButton"
                    android:contentDescription="@string/connect_contact_details_sms_quick_action_content_description"
                    app:icon_string="@string/fa_comment_dots"
                    app:solid_icon="true" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bottom_sheet_sms_details_participant_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/connectWhite"
                    android:paddingBottom="@dimen/general_padding_medium"
                    android:paddingEnd="@dimen/general_padding_medium"
                    android:paddingStart="@dimen/general_padding_medium"
                    android:paddingTop="@dimen/general_padding_large"
                    android:textColor="@color/connectSecondaryDarkBlue" />

                <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
                    android:id="@+id/bottom_sheet_sms_details_user_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/connectWhite"
                    android:paddingBottom="@dimen/general_padding_medium"
                    android:paddingEnd="@dimen/general_padding_medium"
                    android:paddingStart="@dimen/general_padding_medium"
                    android:paddingTop="@dimen/general_padding_large"
                    android:textColor="@color/connectSecondaryDarkBlue"
                    app:icon_string="@string/fa_user_plus" />
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_sheet_sms_details_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/connectWhite"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/general_padding_medium"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>