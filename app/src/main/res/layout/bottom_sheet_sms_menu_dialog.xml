<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/general_padding_xsmall"
    android:paddingBottom="@dimen/general_padding_medium">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/general_padding_medium"
        android:src="@drawable/ic_bottom_sheet_pull_down" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_sms_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/connect_main_send_a_text_message_content_description"
        android:paddingStart="@dimen/general_padding_large"
        android:paddingEnd="@dimen/general_padding_large"
        android:paddingBottom="@dimen/general_padding_medium"
        android:paddingTop="@dimen/general_padding_medium">

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:id="@+id/bottom_sheet_sms_all_icon"
            android:layout_width="@dimen/general_view_xmedium"
            android:layout_height="@dimen/general_view_xmedium"
            android:textColor="@color/connectGrey09"
            android:textSize="@dimen/material_text_subhead"
            android:gravity="center"
            app:icon_string="@string/fa_minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bottom_sheet_sms_all_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/general_padding_medium"
            android:paddingEnd="@dimen/general_padding_xsmall"
            android:text="@string/connect_sms_filter_all"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottom_sheet_sms_all_icon"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_sheet_sms_filter_recycler_view"
        android:layout_width="match_parent"
        android:paddingEnd="@dimen/general_padding_medium"
        android:layout_height="wrap_content" />
</LinearLayout>