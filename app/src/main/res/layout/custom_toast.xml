<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_toast_background"
        android:padding="@dimen/general_padding_medium"
        android:elevation="@dimen/general_elevation_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:layout_width="@dimen/general_view_large"
            android:layout_height="@dimen/general_view_large"
            android:layout_marginEnd="@dimen/general_horizontal_margin_small"
            android:gravity="center"
            android:text="@string/fa_check_circle"
            android:textColor="@color/connectPrimaryGreen"
            android:textSize="@dimen/material_text_subhead" />

        <TextView
            android:id="@+id/custom_toast_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DS_Body2"
            android:text="@string/connect_contacts_details_deleted"
            android:textColor="@color/white" />

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:layout_width="@dimen/general_view_large"
            android:layout_height="@dimen/general_view_large"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:gravity="center"
            android:text="@string/fa_times"
            android:textColor="@color/connectGrey09"
            android:textSize="@dimen/material_text_subhead" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
