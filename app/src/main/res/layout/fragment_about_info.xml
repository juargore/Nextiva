<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_info_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextiva.nextivaapp.android.fragments.AboutInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_info_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_large"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_nextiva_logo"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/about_info_header_text_view"
            style="@style/Subhead.Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_xlarge"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/about_head_text"
            android:textSize="@dimen/material_text_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_info_description_text_view"
            style="@style/Subhead.Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_medium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/about_head_summary"
            android:textSize="@dimen/material_text_subhead" />

        <TextView
            android:id="@+id/about_info_dotted_line_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_xxxlarge"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:maxLines="1"
            android:text="@string/about_info_dot_divider"
            android:textColor="@color/nextivaGrey"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/about_info_version_text_view"
            style="@style/Subhead.Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_xlarge"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/about_version_string"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/about_info_copyright_text_view"
            style="@style/Subhead.Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/about_copyright_string" />

        <TextView
            android:id="@+id/about_info_url_text_view"
            style="@style/Subhead.Hyperlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:text="@string/about_url" />

        <TextView
            android:id="@+id/about_info_dotted_line_2_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_xlarge"
            android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
            android:maxLines="1"
            android:text="@string/about_info_dot_divider"
            android:textColor="@color/nextivaGrey"
            android:textSize="@dimen/material_text_caption" />

    </LinearLayout>
</ScrollView>
