<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/connectWhite"
    tools:context=".fragments.ConnectContactsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.nextiva.nextivaapp.android.view.ConnectSearchView
            android:id="@+id/connect_contacts_search_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_view_xxxlarge"
            android:gravity="center_vertical"
            android:background="@color/connectGrey01"
            android:paddingHorizontal="@dimen/general_padding_medium" />

        <LinearLayout
            android:id="@+id/connect_contacts_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/connectGrey01"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingBottom="@dimen/general_padding_small"
            android:visibility="gone">

            <TextView
                android:id="@+id/connect_search_results_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/general_horizontal_margin_xlarge"
                android:paddingEnd="@dimen/general_horizontal_margin_small"
                android:textColor="@color/connectSecondaryDarkBlue"
                android:textSize="@dimen/material_text_body1" />

            <com.nextiva.nextivaapp.android.view.ConnectFilterView
                android:id="@+id/connect_contacts_search_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
                app:defaultText="@string/connect_contacts_type_search_filter_all" />
        </LinearLayout>

        <com.nextiva.nextivaapp.android.view.ConnectEmptyStateView
            android:id="@+id/connect_contacts_empty_state_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:emptyStateIcon="@string/fa_search"
            app:emptyStateMessage="@string/connect_contacts_search_no_results_message"
            app:emptyStateTitle="@string/connect_contacts_search_no_results_title" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/connect_contacts_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/connect_contacts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/general_view_xxxxxxxlarge"
                android:visibility="gone" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</FrameLayout>