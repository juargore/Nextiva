<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/connect_user_details_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_change_time_zone"
        android:background="@color/connectWhite"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect_user_details_recycler_view"
        android:layout_height="0dp">

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/connect_user_detail_list_item_icon"
        style="@style/DS_Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_large"
        android:contentDescription="icon"
        android:paddingTop="@dimen/general_vertical_margin_xmedium"
        android:text="@string/fa_exchange"
        android:paddingBottom="@dimen/general_vertical_margin_xmedium"
        android:textColor="@color/connectGrey09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connect_user_detail_list_item_title"
        style="@style/DS_Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="@dimen/general_padding_small"
        android:textStyle="bold"
        android:textColor="@color/connectPrimaryBlue"
        android:paddingTop="@dimen/general_vertical_margin_xmedium"
        android:paddingBottom="@dimen/general_vertical_margin_xmedium"
        android:text="@string/user_details_change_time_zone"
        app:layout_constraintBottom_toBottomOf="@id/connect_user_detail_list_item_icon"
        app:layout_constraintStart_toEndOf="@id/connect_user_detail_list_item_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
