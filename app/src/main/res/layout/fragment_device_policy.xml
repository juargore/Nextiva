<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_policy_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DevicePolicyFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/call_decline_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_horizontal_margin_large"
        android:layout_marginStart="@dimen/general_horizontal_margin_large"
        android:text="@string/app_preference_device_policy_call_decline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/call_decline_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_horizontal_margin_large"
        app:layout_constraintBottom_toBottomOf="@+id/call_decline_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/call_decline_text_view"
        tools:text="False"/>
</androidx.constraintlayout.widget.ConstraintLayout>