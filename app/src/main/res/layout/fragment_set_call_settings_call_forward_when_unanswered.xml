<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_call_settings_call_forward_when_unanswered_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/general_horizontal_margin_medium"
    android:paddingEnd="@dimen/general_horizontal_margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/set_call_settings_call_forward_when_unanswered_forward_all_text_view"
            style="@style/Subhead.DkGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_large"
            android:layout_marginBottom="@dimen/general_vertical_margin_large"
            android:text="@string/set_call_settings_call_forwarding_forward_when_unanswered_description" />

        <View
            android:id="@+id/set_call_settings_call_forward_when_unanswered_forward_all_divider_view"
            style="@style/DividerLineColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hairline_small" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/set_call_settings_call_forward_when_unanswered_phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_medium"
            android:hint="@string/set_call_settings_phone_number_hint"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/general_phone_number_max_length"
            app:theme="@style/TextInputPrimaryColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/set_call_settings_call_forward_when_unanswered_phone_number_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentDescription="@string/set_call_settings_call_forward_when_unanswered_phone_number_edit_text_content_description"
                android:drawableRight="@drawable/ic_cancel"
                android:drawableTint="@color/nextivaOrange"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="@integer/general_phone_number_max_length" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/set_call_settings_call_forward_when_unanswered_number_of_rings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/set_call_settings_call_forward_when_unanswered_number_of_rings_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
                android:layout_weight="5"
                android:text="@string/set_call_settings_call_forwarding_forward_when_unanswered_spinner_label" />

            <Spinner
                android:id="@+id/set_call_settings_call_forward_when_unanswered_number_of_rings_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/set_call_settings_call_forward_when_unanswered_number_of_rings_spinner_content_description"
                android:dropDownWidth="wrap_content"
                android:minWidth="@dimen/general_view_xxxxxxxxlarge"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/set_call_settings_call_forward_when_unanswered_enabled_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_medium"
            android:contentDescription="@string/set_call_settings_call_forward_when_unanswered_enabled_check_box_content_description"
            android:text="@string/set_call_settings_enable" />

    </LinearLayout>
</ScrollView>