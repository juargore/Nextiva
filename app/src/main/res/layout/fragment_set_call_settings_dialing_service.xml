<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_call_settings_dialog_service_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/general_horizontal_margin_medium"
    android:paddingEnd="@dimen/general_horizontal_margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<TextView-->
        <!--style="@style/Subhead.DkGrey"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/general_vertical_margin_large"-->
        <!--android:layout_marginTop="@dimen/general_vertical_margin_large"-->
        <!--android:text="@string/nextiva_anywhere_description" />-->

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/hairline_small"-->
        <!--android:background="@color/mediumGrey" />-->

        <RadioGroup
            android:id="@+id/set_call_settings_dialing_service_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_medium">

            <RadioButton
                android:id="@+id/set_call_settings_dialing_service_voip_radio_button"
                style="@style/Subhead.DkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_vertical_margin_small"
                android:layout_marginBottom="@dimen/general_vertical_margin_small"
                android:contentDescription="@string/set_call_settings_dialing_service_voip_radio_button_content_description"
                android:text="@string/call_dialing_service_voip" />

            <RadioButton
                android:id="@+id/set_call_settings_dialing_service_call_back_radio_button"
                style="@style/Subhead.DkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_vertical_margin_small"
                android:layout_marginBottom="@dimen/general_vertical_margin_small"
                android:contentDescription="@string/set_call_settings_dialing_service_call_back_radio_button_content_description"
                android:text="@string/call_dialing_service_call_back" />

            <RadioButton
                android:id="@+id/set_call_settings_dialing_service_call_through_radio_button"
                style="@style/Subhead.DkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_vertical_margin_small"
                android:layout_marginBottom="@dimen/general_vertical_margin_small"
                android:contentDescription="@string/set_call_settings_dialing_service_call_through_radio_button_content_description"
                android:text="@string/call_dialing_service_call_through" />

            <RadioButton
                android:id="@+id/set_call_settings_dialing_service_this_phone_radio_button"
                style="@style/Subhead.DkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_vertical_margin_small"
                android:layout_marginBottom="@dimen/general_vertical_margin_small"
                android:contentDescription="@string/set_call_settings_dialing_service_this_phone_radio_button_content_description"
                android:text="@string/call_dialing_service_this_phone" />

            <RadioButton
                android:id="@+id/set_call_settings_dialing_service_always_ask_radio_button"
                style="@style/Subhead.DkGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_vertical_margin_small"
                android:layout_marginBottom="@dimen/general_vertical_margin_small"
                android:contentDescription="@string/set_call_settings_dialing_service_always_ask_radio_button_content_description"
                android:text="@string/set_call_settings_dialing_service_always_ask" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>