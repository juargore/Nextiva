<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/general_padding_large"
        android:src="@drawable/error_exclamation_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/general_padding_xxlarge"
        android:paddingTop="@dimen/general_padding_large"
        android:paddingEnd="@dimen/general_padding_xxlarge"
        android:paddingBottom="@dimen/general_padding_small"
        android:text="@string/import_contact_loading_bottom_sheet_error_title"
        android:textAlignment="center"
        android:textColor="@color/connectSecondaryDarkBlue"
        android:textSize="@dimen/text_connect_contact_detail_name"
        android:textStyle="bold"
        app:fontFamily="@font/lato_heavy" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/general_padding_xmedium"
        android:paddingEnd="@dimen/general_padding_xmedium"
        android:text="@string/import_contact_loading_bottom_sheet_error_message"
        android:textAlignment="center"
        android:textColor="@color/connectSecondaryDarkBlue" />

    <TextView
        android:id="@+id/try_again"
        style="@style/CreateConnectContactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_medium"
        android:layout_marginTop="@dimen/general_vertical_margin_xlarge"
        android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
        android:backgroundTint="@color/connectPrimaryBlue"
        android:text="@string/general_try_again"
        android:textColor="@color/connectWhite" />

    <TextView
        android:id="@+id/cancel"
        style="@style/CreateConnectContactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_medium"
        android:layout_marginEnd="@dimen/general_horizontal_margin_medium"
        android:background="@color/connectWhite"
        android:text="@string/general_cancel"
        android:textAlignment="center"
        android:textColor="@color/connectPrimaryBlue" />

</LinearLayout>
