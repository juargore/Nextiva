<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomingCallActivity"
    android:id="@+id/incoming_call_fragment_layout"
    android:background="@color/blackOverlay40">

    <com.nextiva.nextivaapp.android.view.AvatarView
        android:id="@+id/incoming_call_caller_avatar_view"
        android:layout_width="@dimen/general_view_xxxxxxlarge"
        android:layout_height="@dimen/general_view_xxxxxxlarge"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/general_vertical_margin_xxxxxxxxxxlarge"
        android:contentDescription="@string/incoming_call_caller_avatar_view_content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/incoming_call_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_horizontal_margin_small"
        android:layout_marginStart="@dimen/general_horizontal_margin_small"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:textColor="@color/white"
        android:contentDescription="@string/incoming_call_name_text_view_content_description"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintTop_toBottomOf="@+id/incoming_call_caller_avatar_view"
        tools:text="Thaddeus Dannar"
        android:textSize="@dimen/material_text_headline" />

    <TextView
        android:id="@+id/incoming_call_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/general_vertical_margin_small"
        android:textColor="@color/white"
        android:contentDescription="@string/incoming_call_number_text_view_content_description"
        app:layout_constraintTop_toBottomOf="@+id/incoming_call_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="(660) 635-0744"
        android:textSize="@dimen/material_text_subhead" />

    <TextView
        android:id="@+id/incoming_call_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_dialog_incoming_call"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/incoming_call_number_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/incoming_call_answer_video_call_button"
        style="@style/NextivaButtonStyle.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_xxxxxlarge"
        android:layout_marginEnd="@dimen/general_horizontal_margin_xxxxxlarge"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_videocam_white_24dp"
        android:textColor="@color/white"
        android:paddingStart="@dimen/general_padding_xxxxxlarge"
        android:paddingEnd="@dimen/general_padding_xxxxxlarge"
        android:text="@string/call_dialog_accept_call"
        android:theme="@style/NextivaButtonStyle.Green"
        android:visibility="gone"
        android:contentDescription="@string/incoming_call_answer_video_call_button_content_description"
        app:layout_constraintBottom_toTopOf="@+id/incoming_call_answer_voice_call_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:theme="@style/NextivaButtonStyle.Green"
        style="@style/NextivaButtonStyle.Green"
        android:id="@+id/incoming_call_answer_voice_call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_vertical_margin_small"
        android:text="@string/call_dialog_accept_call"
        android:drawableStart="@drawable/ic_call_white_24dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="@dimen/general_padding_xxxxxlarge"
        android:paddingEnd="@dimen/general_padding_xxxxxlarge"
        android:contentDescription="@string/incoming_call_answer_voice_call_button_content_description"
        app:layout_constraintBottom_toTopOf="@+id/incoming_call_decline_button"
        app:layout_constraintBottom_toBottomOf="@+id/incoming_call_answer_video_call_button"
        android:layout_marginStart="@dimen/general_horizontal_margin_xxxxxlarge"
        android:layout_marginEnd="@dimen/general_horizontal_margin_xxxxxlarge" />

    <androidx.appcompat.widget.AppCompatButton
        android:theme="@style/NextivaButtonStyle.Red"
        style="@style/NextivaButtonStyle.Red"
        android:id="@+id/incoming_call_decline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_vertical_margin_small"
        android:layout_marginEnd="@dimen/general_horizontal_margin_xxxxxlarge"
        android:layout_marginStart="@dimen/general_horizontal_margin_xxxxxlarge"
        android:drawableStart="@drawable/ic_call_end_white_24dp"
        android:textColor="@color/white"
        android:paddingEnd="@dimen/general_padding_xxxxxlarge"
        android:paddingStart="@dimen/general_padding_xxxxxlarge"
        android:text="@string/call_dialog_decline_call"
        android:contentDescription="@string/incoming_call_decline_button_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
