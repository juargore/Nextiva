<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_chat_conversation_master_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_nextiva_orange_30"
    android:paddingBottom="@dimen/general_vertical_margin_small"
    android:paddingEnd="@dimen/general_horizontal_margin_medium"
    android:paddingStart="@dimen/general_horizontal_margin_medium"
    android:paddingTop="@dimen/general_vertical_margin_small">

    <com.nextiva.nextivaapp.android.view.AvatarView
        android:id="@+id/list_item_chat_conversation_avatar_view"
        android:layout_width="@dimen/general_view_xxxlarge"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/list_item_chat_conversation_titles_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_chat_conversation_avatar_view"
        app:layout_constraintEnd_toStartOf="@id/list_item_chat_conversation_time_text_view">

        <TextView
            android:id="@+id/list_item_chat_conversation_title_text_view"
            android:textAppearance="@style/NextivaListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/general_horizontal_margin_small"
            android:layout_marginStart="@dimen/general_horizontal_margin_small"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Thaddeus.Dannar@east.nextiva.com" />

        <TextView
            android:id="@+id/list_item_chat_conversation_sub_title_text_view"
            android:textAppearance="@style/NextivaListItemSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_small"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="3"
            android:visibility="visible"
            tools:text="This is a test chat message." />

    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_chat_conversation_room_image_view"
        android:layout_width="@dimen/general_view_small"
        android:layout_height="@dimen/general_view_small"
        android:tint="@color/statusMobileGreen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_domain"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/list_item_unread_chat_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="18dp"
        android:minWidth="18dp"
        android:visibility="gone"
        android:background="@drawable/shape_message_count_circle"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/list_item_chat_conversation_titles_linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_chat_conversation_time_text_view"/>

    <TextView
        android:id="@+id/list_item_chat_conversation_time_text_view"
        style="@style/NextivaListItemSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_xsmall"
        android:textColor="@color/smsMessageListItemSubtitle"
        tools:text="12:33 PM"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_chat_conversation_titles_linear_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>