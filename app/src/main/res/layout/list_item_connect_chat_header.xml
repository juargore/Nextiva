<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/general_vertical_margin_medium"
    android:orientation="horizontal">

    <View
        android:id="@+id/call_details_divider_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/hairline_small"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/general_horizontal_margin_medium"
        android:layout_weight="1"
        android:background="@color/connectSecondaryGrey" />

    <TextView
        android:id="@+id/list_item_chat_header_title_text_view"
        style="@style/DS_Caption1Heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:minHeight="@dimen/general_view_xlarge"
        android:textColor="@color/connectGrey10"
        tools:text="Today May 24, 2024 " />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/hairline_small"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/general_horizontal_margin_medium"
        android:layout_weight="1"
        android:background="@color/connectSecondaryGrey" />


</LinearLayout>
