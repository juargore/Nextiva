<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/connectWhite"
    android:paddingBottom="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="4dp">

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/icon_fonttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:paddingStart="16dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/category_title_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/icon_fonttextview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/icon_fonttextview"/>

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/icon_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/image"
        android:textSize="@dimen/material_text_title"
        android:paddingHorizontal="@dimen/general_horizontal_margin_small"
        android:textColor="@color/nextivaPrimaryBlue"
        android:visibility="gone"
        app:icon_string="@string/fa_caret_down_solid"
        app:solid_icon="true"
        app:layout_constraintTop_toTopOf="@+id/category_title_layout"
        app:layout_constraintBottom_toBottomOf="@id/category_title_layout"
        app:layout_constraintStart_toEndOf="@id/category_title_layout" />

    <TextView
        android:id="@+id/category_blocked_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/general_horizontal_margin_medium"
        android:background="@drawable/rounded_corners"
        style="@style/DS_Caption2"
        app:layout_constraintStart_toEndOf="@id/icon_arrow_down"
        app:layout_constraintTop_toTopOf="@+id/category_title_layout"
        app:layout_constraintBottom_toBottomOf="@id/category_title_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>