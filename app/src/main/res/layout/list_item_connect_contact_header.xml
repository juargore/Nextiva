<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_connect_contact_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/general_vertical_margin_medium">

    <TextView
        android:id="@+id/list_item_connect_contact_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_medium"
        android:paddingBottom="@dimen/general_vertical_margin_medium"
        android:paddingStart="@dimen/general_horizontal_margin_small"
        android:textSize="@dimen/material_text_caption"
        android:textAllCaps="true"
        android:textColor="@color/connectSecondaryDarkBlue"
        android:textStyle="bold"
        app:fontFamily="@font/lato_heavy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/list_item_connect_contact_header_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/connectGrey10"
        app:layout_constraintEnd_toStartOf="@id/list_item_connect_contact_header_arrow_image_switcher"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextSwitcher
        android:id="@+id/list_item_connect_contact_header_arrow_image_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/anim_rotate_90_in"
        android:outAnimation="@anim/anim_rotate_90_out"
        android:paddingEnd="@dimen/general_padding_large"
        android:paddingStart="@dimen/general_padding_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/list_item_connect_contact_header_count">

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:layout_width="@dimen/general_view_small"
            android:layout_height="@dimen/general_view_small"
            style="@style/ConnectGroupHeaderIconTintColor"
            app:icon_string="@string/fa_chevron_down"/>

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:layout_width="@dimen/general_view_small"
            android:layout_height="@dimen/general_view_small"
            style="@style/ConnectGroupHeaderIconTintColor"
            app:icon_string="@string/fa_chevron_right"/>
    </TextSwitcher>

    <View
        android:id="@+id/list_item_connect_contact_header_divider"
        android:background="@color/connectGrey03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline_small"
        app:layout_constraintTop_toBottomOf="@id/list_item_connect_contact_header_text_view"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>