<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/connectWhite"
    android:orientation="horizontal"
    android:paddingStart="@dimen/general_padding_large"
    android:paddingTop="@dimen/general_padding_medium"
    android:paddingEnd="@dimen/general_padding_large"
    android:paddingBottom="@dimen/general_padding_medium">

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/list_item_dialog_contact_action_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/connectPrimaryBlue"
        app:icon_string="@string/fa_phone_alt"
        app:solid_icon="false" />

    <TextView
        android:id="@+id/list_item_dialog_contact_action_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_medium"
        android:layout_weight="1"
        android:textColor="@color/connectSecondaryDarkBlue" />

    <TextSwitcher
        android:id="@+id/list_item_dialog_contact_action_arrow_image_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/anim_rotate_90_in"
        android:outAnimation="@anim/anim_rotate_90_out"
        android:paddingStart="@dimen/general_padding_medium"
        android:paddingEnd="0dp">

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            style="@style/ConnectGroupHeaderIconTintColor"
            android:layout_width="@dimen/general_view_small"
            android:layout_height="@dimen/general_view_small"
            android:textSize="@dimen/material_text_body2"
            app:icon_string="@string/fa_chevron_down" />

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            style="@style/ConnectGroupHeaderIconTintColor"
            android:layout_width="@dimen/general_view_small"
            android:layout_height="@dimen/general_view_small"
            android:textSize="@dimen/material_text_body2"
            app:icon_string="@string/fa_chevron_right" />
    </TextSwitcher>
</LinearLayout>