<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/general_horizontal_margin_small"
    android:paddingTop="@dimen/general_vertical_margin_xmedium"
    android:paddingEnd="@dimen/general_horizontal_margin_small"
    android:paddingBottom="@dimen/general_vertical_margin_xmedium">

    <TextView
        android:id="@+id/list_item_dialog_contact_action_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_small"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/connectGrey09"
        android:textSize="@dimen/material_text_menu"
        android:textStyle="bold"
        app:fontFamily="@font/lato_heavy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_dialog_contact_action_detail_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_vertical_margin_xsmall"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/connectSecondaryDarkBlue"
        android:textSize="@dimen/material_text_subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/list_item_dialog_contact_action_detail_title"
        app:layout_constraintTop_toBottomOf="@id/list_item_dialog_contact_action_detail_title" />

</androidx.constraintlayout.widget.ConstraintLayout>