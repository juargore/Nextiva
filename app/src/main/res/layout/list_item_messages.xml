<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_message_master_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_nextiva_orange_30"
    android:paddingStart="@dimen/general_padding_xmedium"
    android:paddingTop="@dimen/general_vertical_margin_small"
    android:paddingEnd="@dimen/general_padding_xmedium"
    android:paddingBottom="@dimen/general_vertical_margin_small">

    <CheckBox
        android:id="@+id/list_item_message_checkbox"
        android:layout_width="@dimen/avatar_connect_call_size"
        android:layout_height="@dimen/avatar_connect_call_size"
        android:gravity="center"
        android:textColor="@color/connectGrey09"
        android:theme="@style/connectPrimaryCheckBox"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.nextiva.nextivaapp.android.view.AvatarView
        android:id="@+id/list_item_messages_avatar_view"
        android:layout_width="@dimen/avatar_connect_size_sms"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/list_item_message_checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/list_item_messages_titles_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_item_message_time_text_view"
        app:layout_constraintStart_toEndOf="@id/list_item_messages_avatar_view"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_item_message_title_text_view"
            style="@style/NextivaListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_xmedium"
            android:layout_marginEnd="@dimen/general_horizontal_margin_small"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/list_item_message_sub_title_text_view"
            app:layout_constraintEnd_toStartOf="@+id/list_item_message_time_text_view"
            app:layout_constraintStart_toEndOf="@+id/list_item_messages_avatar_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Thaddeus.Dannar@east.nextiva.com" />

        <TextView
            android:id="@+id/list_item_message_sub_title_text_view"
            style="@style/NextivaListItemSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_xmedium"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/smsMessageListItemSubtitle"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/list_item_unread_message_count_text_view"
            app:layout_constraintStart_toEndOf="@+id/list_item_messages_avatar_view"
            app:layout_constraintTop_toBottomOf="@+id/list_item_message_title_text_view"
            tools:text="This is a test chat message." />
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_message_time_text_view"
        style="@style/NextivaListItemSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_horizontal_margin_xsmall"
        android:textColor="@color/smsMessageListItemSubtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_messages_titles_linear_layout"
        tools:text="12:33 PM" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:layout_marginEnd="@dimen/general_padding_medium"
        app:layout_constraintBottom_toBottomOf="@id/list_item_messages_titles_linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_message_time_text_view">

        <TextView
            android:id="@+id/list_item_draft_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/material_text_caption"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:visibility="gone"
            android:background="@drawable/shape_message_draft"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="800"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingHorizontal="@dimen/recycler_view_thumb_width"
            android:paddingVertical="@dimen/general_padding_xxsmall"
            android:text="@string/general_draft"/>

        <TextView
            android:id="@+id/list_item_unread_message_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_message_count_square"
            android:gravity="center"
            android:minWidth="23dp"
            android:minHeight="20dp"
            android:paddingHorizontal="4dp"
            android:layout_marginStart="@dimen/general_padding_small"
            tools:text="2"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/lato_heavy" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>