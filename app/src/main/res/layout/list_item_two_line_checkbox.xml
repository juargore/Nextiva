<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_two_line_checkbox_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:paddingBottom="@dimen/general_vertical_margin_xsmall"
        android:paddingEnd="@dimen/general_horizontal_margin_medium"
        android:paddingStart="@dimen/general_horizontal_margin_medium"
        android:paddingTop="@dimen/general_vertical_margin_xsmall">

        <TextView
            android:id="@+id/list_item_title_text_view"
            style="@style/Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_text_title"
            tools:text="Title" />

        <TextView
            android:id="@+id/list_item_sub_title_text_view"
            style="@style/Body1.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_text_body2"
            tools:text="Sub title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:paddingBottom="@dimen/general_vertical_margin_xsmall"
        android:paddingEnd="@dimen/general_horizontal_margin_medium"
        android:paddingTop="@dimen/general_vertical_margin_xsmall">

        <CheckBox
            android:id="@+id/list_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />
    </LinearLayout>

</LinearLayout>