<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_voicemail_master_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_nextiva_orange_30"
    android:paddingStart="@dimen/general_horizontal_margin_medium"
    android:paddingTop="@dimen/general_vertical_margin_small"
    android:paddingEnd="@dimen/general_horizontal_margin_medium"
    android:paddingBottom="@dimen/general_vertical_margin_small">

    <com.nextiva.nextivaapp.android.view.AvatarView
        android:id="@+id/list_item_voicemail_avatar_view"
        android:layout_width="@dimen/general_view_xxxlarge"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/list_item_voicemail_expanded_layout"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/list_item_voicemail_titles_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/list_item_voicemail_avatar_view"
        app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_time_view"
        app:layout_constraintStart_toEndOf="@id/list_item_voicemail_avatar_view"
        app:layout_constraintTop_toTopOf="@id/list_item_voicemail_avatar_view">

        <TextView
            android:id="@+id/list_item_voicemail_title_text_view"
            style="@style/Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_small"
            android:layout_marginEnd="@dimen/general_horizontal_margin_xsmall"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="This person called me" />

        <TextView
            android:id="@+id/list_item_voicemail_sub_title_text_view"
            style="@style/Body1.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_horizontal_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/voicemailListItemSubtitle"
            android:visibility="visible"
            tools:text="1 (555) 555-5555" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_voicemail_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/voicemailListItemSubtitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_voicemail_titles_layout"
        tools:text="Yesterday"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_voicemail_expanded_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_view_xxxxlarge"
        android:layout_marginTop="@dimen/general_view_small"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_avatar_view">

        <ImageButton
            android:id="@+id/list_item_voicemail_play_button"
            style="@style/AddEditIconTint"
            android:layout_width="@dimen/general_view_xlarge"
            android:layout_height="@dimen/general_view_xlarge"
            android:layout_marginBottom="@dimen/general_vertical_margin_medium"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toTopOf="@id/list_item_voicemail_phone_button"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_seek_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/list_item_voicemail_seek_bar"
            style="@style/SeekBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toTopOf="@id/list_item_voicemail_read_button"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_duration_time_text"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_play_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread" />

        <TextView
            android:id="@+id/list_item_voicemail_duration_time_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/general_vertical_margin_small"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toTopOf="@id/list_item_voicemail_delete_button"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_speaker_button"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_seek_bar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0:00" />

        <ImageButton
            android:id="@+id/list_item_voicemail_speaker_button"
            style="@style/ButtonTint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_voicemail_speaker"
            app:layout_constraintBottom_toTopOf="@id/list_item_voicemail_delete_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_duration_time_text"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/list_item_voicemail_phone_button"
            style="@style/ButtonTint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/general_vertical_margin_medium"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_voicemail_call"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_read_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_play_button" />

        <ImageButton
            android:id="@+id/list_item_voicemail_read_button"
            style="@style/ButtonTint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/general_vertical_margin_medium"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_voicemail_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_contact_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_phone_button"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_play_button"
            app:layout_constraintVertical_weight="1" />

        <ImageButton
            android:id="@+id/list_item_voicemail_contact_button"
            style="@style/ButtonTint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/general_vertical_margin_medium"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_voicemail_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/list_item_voicemail_delete_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_read_button"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_play_button"
            app:layout_constraintVertical_weight="1" />

        <ImageButton
            android:id="@+id/list_item_voicemail_delete_button"
            style="@style/ButtonTint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="@dimen/general_vertical_margin_medium"
            android:paddingEnd="@dimen/general_padding_xsmall"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_voicemail_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/list_item_voicemail_contact_button"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_seek_bar"
            app:layout_constraintVertical_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_voicemail_transcription_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="@dimen/general_padding_large"
        app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_expanded_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/list_item_voicemail_transcription_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voicemail_list_transcription_title"
            android:textStyle="bold"
            android:textSize="@dimen/material_text_body1"
            style="@style/TextColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/list_item_voicemail_transcription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            style="@style/TextColor"
            android:textSize="@dimen/material_text_body1"
            android:paddingTop="@dimen/general_padding_medium"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_transcription_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/list_item_voicemail_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voicemail_list_show_more"
            android:textColor="@color/nextivaPrimaryBlue"
            android:textStyle="bold"
            android:paddingTop="@dimen/general_padding_medium"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_transcription"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/list_item_voicemail_rate_this_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voicemail_list_rate_this_service"
            android:paddingTop="@dimen/general_padding_medium"
            android:textColor="@color/grey10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_transcription"/>

        <ImageButton
            android:id="@+id/list_item_voicemail_thumbs_down"
            android:layout_width="@dimen/general_view_xlarge"
            android:layout_height="@dimen/general_view_xlarge"
            android:src="@drawable/ic_voicemail_thumbs_down"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/grey03"
            android:layout_marginTop="@dimen/general_padding_small"
            android:tint="@color/secondaryLightGrey"
            app:layout_constraintStart_toStartOf="@id/list_item_voicemail_rate_this_service"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_rate_this_service"/>

        <ImageButton
            android:id="@+id/list_item_voicemail_thumbs_up"
            android:layout_width="@dimen/general_view_xlarge"
            android:layout_height="@dimen/general_view_xlarge"
            android:src="@drawable/ic_voicemail_thumbs_up"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/grey03"
            android:layout_marginTop="@dimen/general_padding_small"
            android:tint="@color/secondaryLightGrey"
            app:layout_constraintEnd_toEndOf="@id/list_item_voicemail_rate_this_service"
            app:layout_constraintTop_toBottomOf="@id/list_item_voicemail_rate_this_service"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>