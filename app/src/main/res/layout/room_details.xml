<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:showIn="@layout/bottom_sheet_room_detail">

    <TextView
        android:id="@+id/room_label_details"
        style="@style/DS_Caption1Heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/connect_contact_details_room_details"
        android:textAllCaps="true"
        android:textColor="@color/connectSecondaryDarkBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_details_separator" />

    <TextView
        android:id="@+id/room_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/connect_bottom_sheet_room_details_room_name"
        android:textColor="@color/connectGrey09"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/room_name_icon"
        app:layout_constraintStart_toEndOf="@id/room_name_icon"
        app:layout_constraintTop_toTopOf="@id/room_name_icon" />

    <TextView
        android:id="@+id/room_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/connectSecondaryDarkBlue"
        app:layout_constraintStart_toStartOf="@id/room_name_label"
        app:layout_constraintTop_toBottomOf="@id/room_name_label" />

    <TextView
        android:id="@+id/room_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/connect_bottom_sheet_room_details_room_description"
        android:textColor="@color/connectGrey09"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/room_description_icon"
        app:layout_constraintStart_toEndOf="@id/room_description_icon"
        app:layout_constraintTop_toTopOf="@id/room_description_icon" />

    <TextView
        android:id="@+id/room_description_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/connectSecondaryDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/room_description_label"
        app:layout_constraintTop_toBottomOf="@id/room_description_label" />

    <TextView
        android:id="@+id/room_owner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/connect_bottom_sheet_room_details_room_owner"
        android:textColor="@color/connectGrey09"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/room_owner_icon"
        app:layout_constraintStart_toEndOf="@id/room_owner_icon"
        app:layout_constraintTop_toTopOf="@id/room_owner_icon" />

    <TextView
        android:id="@+id/room_owner_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="20dp"
        android:textColor="@color/connectSecondaryDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/room_owner_label"
        app:layout_constraintTop_toBottomOf="@id/room_owner_label" />

    <View
        android:id="@+id/room_details_separator"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/connectGrey01"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_room_details_recycler_views" />

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/room_name_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/fa_door_open"
        android:textColor="@color/connectGrey09"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/room_label_details"
        app:layout_constraintTop_toBottomOf="@id/room_label_details" />

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/room_description_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/fa_edit"
        android:textColor="@color/connectGrey09"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/room_label_details"
        app:layout_constraintTop_toBottomOf="@id/room_name_textview" />

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/room_owner_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fa_edit"
        android:textColor="@color/connectGrey09"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/room_label_details"
        app:layout_constraintTop_toBottomOf="@id/room_description_textview" />

</merge>