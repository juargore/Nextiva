<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/active_call_button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true"
    tools:background="@drawable/selector_active_call_button"
    tools:minHeight="80dp"
    tools:minWidth="80dp">

    <ImageSwitcher
        android:id="@+id/active_call_image_switcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:layout_marginBottom="8dp"
        android:duplicateParentState="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/active_call_first_image_view"
            android:layout_width="@dimen/general_view_large"
            android:layout_height="@dimen/general_view_large"
            android:contentDescription="@string/in_call_image"
            android:duplicateParentState="true"
            android:tint="@color/selector_active_call_text"
            tools:contentDescription="@string/active_call_pause"
            tools:src="@drawable/ic_call"
            tools:tint="@color/selector_active_call_text" />

        <ImageView
            android:id="@+id/active_call_second_image_view"
            android:layout_width="@dimen/general_view_large"
            android:layout_height="@dimen/general_view_large"
            android:contentDescription="@string/in_call_image"
            android:duplicateParentState="true"
            android:tint="@color/selector_active_call_text"
            tools:contentDescription="@string/active_call_pause"
            tools:src="@drawable/ic_call"
            tools:tint="@color/selector_active_call_text" />
    </ImageSwitcher>

    <TextSwitcher
        android:id="@+id/active_call_button_text_switcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:layout_marginBottom="@dimen/general_vertical_margin_small"
        android:inAnimation="@anim/anim_fade_in"
        android:outAnimation="@anim/anim_fade_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/active_call_image_switcher"
        android:visibility="gone">

        <TextView
            android:id="@+id/active_call_button_first_text_view"
            style="@style/Body1.Primary"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/selector_active_call_text"
            tools:text="@string/active_call_hold" />

        <TextView
            android:id="@+id/active_call_button_second_text_view"
            style="@style/Body1.Primary"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/selector_active_call_text"
            tools:text="@string/active_call_hold" />
    </TextSwitcher>

</androidx.constraintlayout.widget.ConstraintLayout>