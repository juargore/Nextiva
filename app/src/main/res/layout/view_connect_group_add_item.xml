<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_vertical_margin_small"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
            android:id="@+id/view_connect_add_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/connectPrimaryGreen"
            android:textSize="@dimen/material_text_headline"
            app:icon_string="@string/fa_plus_circle"
            app:solid_icon="true" />

        <TextView
            android:id="@+id/view_connect_add_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/general_padding_small"
            android:paddingStart="@dimen/general_padding_small"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/material_text_subhead" />

    </LinearLayout>
</LinearLayout>