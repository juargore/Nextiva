<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/general_view_xlarge"
    android:background="@drawable/connect_text_input_background"
    android:orientation="horizontal">

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/connect_search_view_close_icon"
        android:layout_width="@dimen/general_view_large"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/general_horizontal_margin_xxsmall"
        android:textColor="@color/connectGrey09"
        android:textSize="@dimen/material_text_subhead"
        android:visibility="gone"
        app:icon_string="@string/fa_arrow_left" />

    <com.nextiva.nextivaapp.android.view.fontawesome.FontTextView
        android:id="@+id/connect_search_view_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/general_horizontal_margin_xmedium"
        android:textColor="@color/connectGrey09"
        android:textSize="@dimen/material_text_subhead"
        android:visibility="visible"
        app:icon_string="@string/fa_search" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/connect_search_view"
        app:theme="@style/AppSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultQueryHint="Search"
        app:iconifiedByDefault="false"
        app:closeIcon="@drawable/ic_close_x"
        app:searchIcon="@null"
        app:queryHint="Search" />
</LinearLayout>