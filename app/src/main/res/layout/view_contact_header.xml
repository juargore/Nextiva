<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/general_vertical_margin_medium"
    android:paddingBottom="@dimen/general_vertical_margin_medium"
    app:layout_collapseMode="parallax">

    <com.nextiva.nextivaapp.android.view.AvatarView
        android:id="@+id/contact_header_avatar_view"
        android:layout_width="@dimen/general_view_xxxxxxxlarge"
        android:layout_height="@dimen/general_view_xxxxxxxlarge"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:fitsSystemWindows="true"
        android:contentDescription="@string/contact_header_avatar_view_content_description" />

    <TextView
        android:id="@+id/contact_header_name_text_view"
        style="@style/Title.LtGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/general_horizontal_margin_small"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:layout_marginEnd="@dimen/general_horizontal_margin_small"
        android:gravity="center"
        android:contentDescription="@string/contact_header_name_text_view_content_description"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/contact_header_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/general_horizontal_margin_small"
        android:layout_marginTop="@dimen/general_vertical_margin_small"
        android:layout_marginEnd="@dimen/general_horizontal_margin_small"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white" />

</LinearLayout>