<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/general_horizontal_margin_medium"
    android:layout_marginRight="@dimen/general_horizontal_margin_medium"
    android:paddingTop="@dimen/general_padding_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_start_end_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_start_time_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_vertical_margin_small"
            android:background="@drawable/connect_text_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:minHeight="@dimen/time_view_min_height"
            android:paddingStart="@dimen/general_padding_medium"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingEnd="@dimen/general_padding_medium"
            android:paddingBottom="@dimen/general_padding_small"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/notification_schedule_time_view_text_size"
            app:drawableRightCompat="@drawable/ic_schedule_time"
            app:layout_constraintEnd_toStartOf="@+id/txt_end_time_view"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_start_time_label"
            tools:text="9:00 am" />

        <TextView
            android:id="@+id/txt_start_time_label"
            style="@style/DS_Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="800"
            android:text="@string/notification_create_schedule_start_time_label"
            android:textColor="@color/connectGrey10"
            app:layout_constraintStart_toStartOf="@+id/txt_start_time_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_end_time_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_vertical_margin_medium"
            android:layout_marginTop="@dimen/general_vertical_margin_small"
            android:background="@drawable/connect_text_input_background"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:minHeight="@dimen/time_view_min_height"
            android:paddingStart="@dimen/general_padding_medium"
            android:paddingTop="@dimen/general_padding_small"
            android:paddingEnd="@dimen/general_padding_medium"
            android:paddingBottom="@dimen/general_padding_small"
            android:textColor="@color/connectSecondaryDarkBlue"
            android:textSize="@dimen/notification_schedule_time_view_text_size"
            app:drawableRightCompat="@drawable/ic_schedule_time"
            app:layout_constraintEnd_toStartOf="@id/img_add_remove_break_time"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/txt_start_time_view"
            app:layout_constraintTop_toBottomOf="@+id/txt_start_time_label"
            tools:text="5:00 pm" />


        <TextView
            android:id="@+id/txt_end_time_label"
            style="@style/DS_Overline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="800"
            android:text="@string/notification_create_schedule_end_time_label"
            android:textColor="@color/connectGrey10"
            app:layout_constraintStart_toStartOf="@+id/txt_end_time_view"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_add_remove_break_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/general_vertical_margin_large"
            android:padding="@dimen/general_padding_xxsmall"
            app:layout_constraintBottom_toBottomOf="@+id/txt_end_time_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_end_time_view"
            app:layout_constraintTop_toTopOf="@+id/txt_end_time_view"
            app:layout_constraintWidth_default="wrap" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_validation_error"
        style="@style/DS_Caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_vertical_margin_xsmall"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/connectSecondaryRed"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/constraint_start_end_time"
        tools:text="End time can not be before start time" />


</androidx.constraintlayout.widget.ConstraintLayout>